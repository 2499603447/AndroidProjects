<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityA">

    <Button
        android:id="@+id/btnA_BindService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnA_BindService"/>

    <Button
        android:id="@+id/btnA_UnbindService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnA_UnbindService"/>

    <Button
        android:id="@+id/btnA_StartActivityB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnA_StartActivityB"/>

    <Button
        android:id="@+id/btnA_Finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnA_Finish"/>

</LinearLayout>